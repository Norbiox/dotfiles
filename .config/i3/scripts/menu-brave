#!/bin/bash

declare -a options=(
"Private: Default"
"Ari10: Profile 1"
)

chosen=$(printf '%s\n' "${options[@]}" | menu -i -l 20 -p "Brave:")

if [ "$chosen" ]; then
        # take everything after the colon
        option=$(printf '%s\n' "${chosen}" | awk '{split($0,a,": "); print a[2]}')
        brave --profile-directory="$option" $@
else
        echo "Program terminated" && exit 1
fi
