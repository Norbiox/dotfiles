# Idasen
bindsym $mod1+Shift+i           exec --no-startup-id source ~/.dmenurc && dmenu-idasen $DMENU_OPTIONS

# Soundcore headphones
bindsym $mod1+Shift+h           exec --no-startup-id source ~/.dmenurc && dmenu-soundcore $DMENU_OPTIONS

# Wacom stylus
